<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.client.fragment.EventFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5257f2">

        <androidx.appcompat.widget.SearchView
            android:theme="@style/SearchViewTheme"
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            app:tabSelectedTextColor="@color/colorTextPrimary"
            android:focusable="false"
            android:queryHint="@string/string_search"
            app:defaultQueryHint="@string/string_search"
            app:iconifiedByDefault="false"
            app:queryHint="@string/string_search" />
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5257f2"
        app:tabGravity="fill"
        app:tabMode="scrollable"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabSelectedTextColor="@color/colorTextPrimary"
        app:tabTextColor="@color/colorTextDisable">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/firstItemEvent"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="On going" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/secondItemEvent"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Up Coming" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/thirdItemEvent"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Took Place" />


    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerEvent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.viewpager.widget.ViewPager>


</LinearLayout>