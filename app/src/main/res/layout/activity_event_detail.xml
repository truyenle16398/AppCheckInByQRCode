<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.client.EventDetailActivity">
    <FrameLayout
        android:id="@+id/showImageFull"
        android:background="#020202"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_350sdp">
            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/loading"
                android:id="@+id/imageDetailFull"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarDetailFull"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="#40000000"
            app:titleTextColor="#fff" >
            <TextView
                android:id="@+id/tvbackdetail"
                android:textColor="#fff"
                android:drawableLeft="@drawable/ic_white_back_ios_24"
                android:textSize="@dimen/_40sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.Toolbar>
    </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageDetail"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:background="#fff"
                            android:scaleType="centerCrop"
                            android:src="@drawable/loading" />

                        <LinearLayout
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Button
                                android:visibility="visible"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/buttonlogin"
                                android:id="@+id/btnRegisterDetail"
                                android:layout_width="match_parent"
                                android:layout_height="?actionBarSize"
                                android:text="@string/text_button_register"
                                android:textSize="22sp" />
                            <LinearLayout
                                android:gravity="center|left"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_marginRight="10dp"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/personman1" />
                                <TextView
                                    android:layout_gravity=""
                                    android:textStyle="bold"
                                    android:textColor="#000"
                                    android:textSize="20sp"
                                    android:text="@string/event_chairman"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txtChairman"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="5dp"
                                android:autoLink="web"
                                android:text="Teacher Huan Roses"
                                android:textColor="#000"
                                android:textSize="15sp" />

                            <LinearLayout
                                android:gravity="center|left"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_marginRight="10dp"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_map" />
                                <TextView
                                    android:layout_gravity=""
                                    android:textStyle="bold"
                                    android:textColor="#000"
                                    android:textSize="20sp"
                                    android:text="@string/event_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/txtAddressInfoDetail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="5dp"
                                android:text="TÒA NHÀ B, TẦNG 5, 41 Lê Duẫn, Hải Châu, Đà Nẵng"
                                android:textColor="#000"
                                android:textSize="16sp" />
                            <LinearLayout
                                android:gravity="center|left"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_marginRight="10dp"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_lich" />
                                <TextView
                                    android:layout_gravity=""
                                    android:textStyle="bold"
                                    android:textColor="#000"
                                    android:textSize="20sp"
                                    android:text="@string/event_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:weightSum="2"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </LinearLayout>
                            </LinearLayout>
                            <TextView
                                android:layout_marginBottom="5dp"
                                android:id="@+id/txtDateTimeStart"
                                android:layout_marginTop="5dp"
                                android:textColor="#000"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp"
                                android:textSize="16sp"
                                android:text="20h00 - 21h00"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:layout_marginBottom="5dp"
                                android:id="@+id/txtDateTimeEnd"
                                android:textColor="#000"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp"
                                android:textSize="16sp"
                                android:text="Ngày 19 tháng 05 năm 2020"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <LinearLayout
                                android:gravity="center|left"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_marginRight="10dp"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/detail" />
                                <TextView
                                    android:layout_gravity=""
                                    android:textStyle="bold"
                                    android:textColor="#000"
                                    android:textSize="20sp"
                                    android:text="@string/event_detail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <TextView
                                android:lineSpacingExtra="4dp"
                                android:id="@+id/txtInfoDetail"
                                android:layout_marginTop="5dp"
                                android:textColor="#000"
                                android:textSize="16sp"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp"
                                android:text="Bphone B86 sở hữu thiết kế tối giản với viền đều và không có cằm"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarDetail"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="#40000000"
                    app:titleTextColor="#fff" />
            </RelativeLayout>
        </LinearLayout>
</LinearLayout>