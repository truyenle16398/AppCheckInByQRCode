<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carr"
    app:cardCornerRadius="10dp"
    app:cardElevation="20dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginRight="1dp"
    android:layout_marginLeft="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:visibility="visible"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/eventimage_favorite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:scaleType="centerCrop"
                android:src="@drawable/loadingkhoa" />

            <LinearLayout
                android:id="@+id/idtest"
                android:weightSum="3"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold"
                    android:id="@+id/eventname_favorite"
                    android:gravity="center|left"
                    android:textSize="20sp"
                    android:maxLines="2"
                    android:textColor="#000"
                    android:text="Tên sự kiện ở đây nè nha bạn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:maxLines="1"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/eventpersonname_favorite"
                    android:gravity="center|left"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableLeft="@drawable/time"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:text="Diễn dã ở đây"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:maxLines="1"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/eventday_favorite"
                    android:gravity="center|left"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableLeft="@drawable/time"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:text="Ngày diễn ra ở đây"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:maxLines="1"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/eventcheck_favorite"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center|left"
                    android:drawableLeft="@drawable/subscribe"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:text="08:00 đến 17:00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
</androidx.cardview.widget.CardView>