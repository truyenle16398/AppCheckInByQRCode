<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="2dp"
    android:orientation="vertical"
    app:cardCornerRadius="14dp"
    app:cardElevation="11dp"
    tools:context="com.example.appcheckinbyqrcode.ui.client.adapter.fragmentevenstadapter.EventAdapterGoingOnHappen">
    <androidx.cardview.widget.CardView
        android:id="@+id/linnerOnGoingHappen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/roundimage">

                    <ImageView
                        android:id="@+id/eventavatarOnGoingHappen"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/loading" />

                    <TextView
                        android:id="@+id/txtImageFavorite2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|left"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/ic_favorite_red_24dp"
                        android:scaleType="centerCrop"
                        android:visibility="visible" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/eventnameOnGoingHappen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="3"
                        android:gravity="center|left"
                        android:maxLines="2"
                        android:text="Kiet's BirthDay Party at home"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/eventintroOnGoingHappen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:gravity="center|left"
                        android:maxLines="2"
                        android:text="Pool Party and Live Music"
                        android:textColor="#000"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/eventdayOnGoingHappen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:drawableLeft="@drawable/time"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="19-05-2020"
                        android:textColor="#000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/eventtimeOnGoingHappen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:drawableLeft="@drawable/time"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="08:00 đến 17:00"
                        android:textColor="#000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/eventplaceOnGoingHappen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:drawableLeft="@drawable/locationicon"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="41 Le Duan, Hai Chau, DN"
                        android:textColor="#000"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>