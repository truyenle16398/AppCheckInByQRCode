<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardCornerRadius="9dp"
    android:id="@+id/linnerOnGoing"
    app:cardElevation="11dp"
    android:layout_marginBottom="2dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.appcheckinbyqrcode.ui.client.adapter.fragmentevenstadapter.EventAdapterGoingOn">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="9dp"
        app:cardElevation="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="180dp">
                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/loading"
                        android:scaleType="centerCrop"
                        android:id="@+id/eventavatarOnGoing"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_gravity="top|left"
                        android:layout_weight="1"
                        android:layout_marginBottom="4dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/ic_favorite_red_24dp"
                        android:id="@+id/txtImageFavorite1"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="top|left"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="3"
                            android:maxLines="2"
                            android:layout_marginBottom="4dp"
                            android:textStyle="bold"
                            android:id="@+id/eventnameOnGoing"
                            android:gravity="center|left"
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:text="Kiet's BirthDay Party at home"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        android:maxLines="2"
                        android:layout_marginBottom="4dp"
                        android:id="@+id/eventintroOnGoing"
                        android:gravity="center|left"
                        android:textSize="12sp"
                        android:textColor="#000"
                        android:text="Pool Party and Live Music AAAAA AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:singleLine="true"
                        android:layout_marginBottom="4dp"
                        android:id="@+id/eventdayOnGoing"
                        android:gravity="center|left"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/time"
                        android:textSize="12sp"
                        android:textColor="#000"
                        android:text="19-05-2020"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:singleLine="true"
                        android:layout_marginBottom="4dp"
                        android:id="@+id/eventtimeOnGoing"
                        android:gravity="center|left"
                        android:drawableLeft="@drawable/time"
                        android:textSize="12sp"
                        android:drawablePadding="5dp"
                        android:textColor="#000"
                        android:text="08:00 đến 17:00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:singleLine="true"
                        android:layout_marginBottom="4dp"
                        android:id="@+id/eventplaceOnGoing"
                        android:drawablePadding="5dp"
                        android:gravity="center|left"
                        android:drawableLeft="@drawable/location1"
                        android:textSize="12sp"
                        android:textColor="#000"
                        android:text="41 Le Duan, Hai Chau, DN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>