<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/linnerOnGoing"
    app:cardCornerRadius="9dp"
    app:cardElevation="11dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="7dp"
    android:layout_marginLeft="7dp"
    android:layout_height="wrap_content"
    tools:context="com.example.appcheckinbyqrcode.ui.client.adapter.fragmentevenstadapter.EventAdapterGoingOn">
    <LinearLayout
        android:paddingTop="5dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingBottom="5dp"
        android:padding="5dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:src="@drawable/loading"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:id="@+id/eventavatarOnGoing"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:maxLines="2"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:id="@+id/eventnameOnGoing"
                android:gravity="center|left"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="Kiet's BirthDay Party at home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:singleLine="true"
                android:layout_marginBottom="4dp"
                android:id="@+id/eventintroOnGoing"
                android:gravity="center|left"
                android:textSize="12sp"
                android:textColor="#000"
                android:text="Pool Party and Live Music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:singleLine="true"
                android:layout_marginBottom="4dp"
                android:gravity="center|left"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_favorite_red_24dp"
                android:id="@+id/btnImageFavorite"
                android:layout_width="50dp"
                android:layout_height="30dp"/>
            
            <TextView
                android:singleLine="true"
                android:layout_marginBottom="4dp"
                android:id="@+id/eventdayOnGoing"
                android:gravity="center|left"
                android:drawableLeft="@drawable/calendar"
                android:textSize="12sp"
                android:textColor="#000"
                android:text="19-05-2020"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:singleLine="true"
                android:layout_marginBottom="4dp"
                android:id="@+id/eventtimeOnGoing"
                android:gravity="center|left"
                android:drawableLeft="@drawable/time"
                android:textSize="12sp"
                android:textColor="#000"
                android:text="08:00 đến 17:00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:singleLine="true"
                android:layout_marginBottom="4dp"
                android:id="@+id/eventplaceOnGoing"
                android:gravity="center|left"
                android:drawableLeft="@drawable/locationicon"
                android:textSize="12sp"
                android:textColor="#000"
                android:text="41 Le Duan, Hai Chau, DN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>