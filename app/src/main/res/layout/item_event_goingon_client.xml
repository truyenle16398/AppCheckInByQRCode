<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linnerOnGoing"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="3dp"
    android:layout_marginLeft="3dp"
    android:layout_width="match_parent"
    android:background="@drawable/custom_bg"
    android:layout_height="wrap_content"
    tools:context="com.example.appcheckinbyqrcode.ui.client.adapter.fragmentevenstadapter.EventAdapterGoingOn">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/mRl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/loading"
                android:scaleType="centerCrop"
                android:id="@+id/eventavatarOnGoing"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_toRightOf="@+id/eventavatarOnGoing"
                android:maxLines="2"
                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                android:id="@+id/eventnameOnGoing"
                android:gravity="center|left"
                android:textSize="@dimen/_14sdp"
                android:textColor="#000"
                android:text="Kiet's BirthDay Party at home, Kiet's BirthDay Party at home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_alignParentRight="true"
                android:layout_gravity="top|left"
                android:layout_weight="1"
                android:layout_marginBottom="2dp"
                android:scaleType="centerCrop"
                android:background="@drawable/ic_favorite_red_24dp"
                android:id="@+id/txtImageFavorite1"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_below="@+id/mRl"
            android:visibility="visible"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_gravity="top|left"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="@dimen/_4sdp"
                android:maxLines="3"
                android:layout_marginBottom="4dp"
                android:id="@+id/eventintroOnGoing"
                android:gravity="left"
                android:textSize="12sp"
                android:textColor="@color/cam_"
                android:text="Pool Party and Live Music AAAAA AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/ic_lich"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"/>
                <TextView
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:singleLine="true"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/eventdayOnGoing"
                    android:gravity="center|left"
                    android:drawablePadding="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/cam_"
                    android:text="19-05-2020"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_4sdp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/ic_lich"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"/>
                <TextView
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:singleLine="true"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/eventtimeOnGoing"
                    android:gravity="center|left"
                    android:textSize="12sp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/cam_"
                    android:text="08:00 đến 17:00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/ic_map"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"/>
                <TextView
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:singleLine="true"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/eventplaceOnGoing"
                    android:drawablePadding="5dp"
                    android:gravity="center|left"
                    android:textSize="12sp"
                    android:textColor="@color/cam_"
                    android:text="41 Le Duan, Hai Chau, DN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>