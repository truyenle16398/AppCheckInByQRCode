<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="#C4C2C2"
    android:orientation="vertical"
    android:paddingLeft="7dp"
    android:paddingTop="5dp"
    android:paddingRight="7dp"
    android:paddingBottom="5dp"
    app:cardCornerRadius="9dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/carr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="9dp"
        app:cardElevation="11dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="2">

            <ImageView
                android:id="@+id/eventavatar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/loading" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/eventname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center|left"
                    android:text="Kiet's BirthDay Party at home"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/eventintro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center|left"
                    android:text="Pool Party and Live Music"
                    android:textColor="#000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/eventday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:drawableLeft="@drawable/calendar"
                    android:gravity="center|left"
                    android:text="19-05-2020"
                    android:textColor="#000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/eventtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:drawableLeft="@drawable/time"
                    android:gravity="center|left"
                    android:text="08:00 đến 17:00"
                    android:textColor="#000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/eventplace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:drawableLeft="@drawable/locationicon"
                    android:gravity="center|left"
                    android:text="41 Le Duan, Hai Chau, DN"
                    android:textColor="#000"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>